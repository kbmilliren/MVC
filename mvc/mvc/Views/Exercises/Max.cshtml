@model mvc.Models.MaxViewModel

@{
    ViewBag.Title = "Max";
}

<h2>Max</h2>

<form action="@Url.Action("Max", "Exercises")" method="post">
    <label>Input Number</label><input type="number" name="number1" value="@if(Model != null){ @Model.numbers[0]}" /> <br />
    <label>Input Number</label><input type="number" name="number2" value="@if(Model != null){ @Model.numbers[1]}" /> <br />
    <label>Input Number</label><input type="number" name="number3" value="@if(Model != null){ @Model.numbers[2]}" /> <br />
    <label>Sum: </label><input type="number" name="sum" value="@if(Model != null){ @Model.max}" disabled /> <br />
    <button type="submit">Get Max</button>
</form>


